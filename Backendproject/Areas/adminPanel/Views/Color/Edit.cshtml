@model Color
@{
    ViewData["Title"] = "Edit";
}


<div class="main-panel d-flex flex-column justify-content-center align-items-center">
    <h1>Edit color</h1>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div>
            <label>Edit color image:</label><br />
            <input asp-for="Photo" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div>
            <label>Color name:</label><br />
            <input asp-for="Name" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mt-2">
            <button class="btn btn-warning" type="submit">Edit</button>
        </div>
    </form>
</div>