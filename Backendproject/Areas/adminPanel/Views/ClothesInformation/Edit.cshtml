@model ClothesInformation
@{
    ViewData["Title"] = "Edit";
}


<div class="main-panel d-flex flex-column justify-content-center align-items-center">
    <h1>Edit info</h1>
    <form class="mt-3" method="post">
        <div>
            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

            <label>Additional Info:</label><br />
            <input asp-for="AdditionalInfo" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="AdditionalInfo"></span>
        </div>
        <div>
            <label>Definition:</label><br />
            <input asp-for="Definition" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Definition"></span>
        </div>
        <div class="mt-2">
            <button class="btn btn-warning" type="submit">Edit</button>
        </div>
    </form>
</div>s