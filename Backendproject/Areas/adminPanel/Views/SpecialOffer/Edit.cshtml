@model SpecialOffer
@{
    ViewData["Title"] = "Edit";
}


<div class="main-panel ms-3 mt-3">
    <h1>Edit Special offer</h1>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div class="image my-4">
            <img width="300" src="~/assets/img/@Model.Image" alt="@Model.Title" />
        </div>
        <div>
            <label asp-for="Photo">Image:</label><br />
            <input asp-for="Photo" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div>
            <label asp-for="Title">Title :</label><br />
            <input asp-for="Title" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div>
            <label asp-for="Discount">Discount:</label><br />
            <input asp-for="Discount" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Discount"></span>
        </div>
        <div>
            <label asp-for="ButtonUrl">ButtonUrl:</label><br />
            <input asp-for="ButtonUrl" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="ButtonUrl"></span>
        </div>
        <div class="mt-2">
            <button class="btn btn-warning" type="submit">Edit</button>
        </div>
    </form>
</div>
