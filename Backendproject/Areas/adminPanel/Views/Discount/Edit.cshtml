@model Discount
@{
    ViewData["Title"] = "Edit";
}


<div class="main-panel d-flex flex-column justify-content-center align-items-center">
    <h1>Edit discount</h1>
    <form class="mt-3" method="post">
        <div>
            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

            <label>Discount name:</label><br />
            <input asp-for="PercentKey" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="PercentKey"></span>
        </div>
        <div>
            <label>Discount value:</label><br />
            <input asp-for="PercentValue" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="PercentValue"></span>
        </div>
        <div class="mt-2">
            <button class="btn btn-warning" type="submit">Edit</button>
        </div>
    </form>
</div>s