@model Category
@{
    ViewData["Title"] = "Create";
}


<div class="main-panel container mt-3">
    <div class="d-flex justify-content-between  mt-3">
        <h1>Create category</h1>
        <a asp-action="Index" class="text-decoration-none text-secondary">Back to List</a>
    </div>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <label asp-for="Photo">Image:</label><br />
            <input asp-for="Photo" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div>
            <label asp-for="Name">Name:</label><br />
            <input asp-for="Name" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="mt-2">
            <button class="btn btn-success" type="submit">Create</button>
        </div>

    </form>
</div>