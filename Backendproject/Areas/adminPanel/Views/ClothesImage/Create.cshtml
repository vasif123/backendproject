@model ClothesImage
@{
    ViewData["Title"] = "Create";
}


<div class="main-panel ms-3 mt-3 container">
    <div class="d-flex justify-content-between">
        <h2>Create new image for clothes</h2>

        <a class="text-secondary text-decoration-none" asp-action="Index">Back to List</a>
    </div>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div>
            <label asp-for="Photo">Image:</label><br />
            <input asp-for="Photo" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>

        <div>
            <label asp-for="Alternative">Alternative:</label><br />
            <input asp-for="Alternative" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Alternative"></span>
        </div>
        <div>
            <label asp-for="IsMain" class="form-check-label">
            </label>
            <select class="form-control" asp-for="IsMain">
                <option name="IsMain" value="true">True</option>
                <option name="IsMain" selected value="false">False</option>
            </select>
            <span asp-validation-for="IsMain" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ClothesId" class="control-label"></label>
            <select asp-for="ClothesId" class="form-control" asp-items="@(new SelectList(ViewBag.ClothesId, "Id", "Name"));"></select>
        </div>
        <div class="mt-2">
            <button class="btn btn-success" type="submit">Create</button>
        </div>
    </form>
