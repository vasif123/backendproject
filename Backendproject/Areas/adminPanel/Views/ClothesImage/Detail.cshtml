@model Backendproject.Models.ClothesImage

@{
    ViewData["Title"] = "Detail";
}

<div class="main-panel">
    <div class="d-flex justify-content-between container mt-3">
        <h2>Detail</h2>
        <div>
            <a class="text-decoration-none text-secondary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            <a class="text-decoration-none text-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dd class="col-sm-6">
                <img width="200" src="~/assets/img/@Html.DisplayFor(model => model.Name)" 
                     alt="@Html.DisplayFor(model => model.Alternative)" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Alternative)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Alternative)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsMain)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsMain)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Clothes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Clothes.Name)
            </dd>
        </dl>
    </div>
</div>
