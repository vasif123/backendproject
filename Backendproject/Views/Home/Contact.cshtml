@model Message
@inject Backendproject.Service.LayoutService layoutService;
@{
    ViewData["Title"] = "Contact";
}



<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" asp-action="index">Home</a>
                <span class="breadcrumb-item active">Contact</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Contact Start -->
<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Contact Us</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <div class="contact-form bg-light p-30 w-100">
                <div id="success"></div>
                <form method="post" class="d-flex flex-column" style="gap:20px;">
                    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="control-group">
                        <input asp-for="Name" class="form-control" placeholder="Your Name" />
                        <span asp-validation-for="Name" class="help-block text-danger"></span>
                    </div>
                    <div class="control-group">
                        <input asp-for="Email" class="form-control" placeholder="Your Email" />
                        <span asp-validation-for="Email" class="help-block text-danger"></span>
                    </div>
                    <div class="control-group">
                        <input asp-for="Subject" class="form-control" placeholder="Subject" />
                        <span asp-validation-for="Subject" class="help-block text-danger"></span>
                    </div>
                    <div class="control-group">
                        <textarea class="form-control" rows="8" asp-for="MessageText" placeholder="Message"></textarea>
                        <span asp-validation-for="MessageText" class="help-block text-danger"></span>
                    </div>
                    <div>
                        <button class="btn btn-primary py-2 px-4" type="submit">
                            Send
                            Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-5 mb-5">
            <div class="bg-light p-30 mb-30">
                <iframe style="width: 100%; height: 250px; border: 0;"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.4288297426!2d-78.01371936852176!3d42.72876761954724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4ccc4bf0f123a5a9%3A0xddcfc6c1de189567!2sNew%20York%2C%20USA!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd"
                        frameborder="0" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>

            <div class="bg-light p-30 mb-3">
                <p class="mb-2">@Html.Raw(layoutService.GetSettings().FirstOrDefault(l => l.Key.Trim().ToLower() == "addressicon")?.Value)@layoutService.GetSettings().FirstOrDefault(l => l.Key.Trim().ToLower() == "address")?.Value</p>
                <p class="mb-2">@Html.Raw(layoutService.GetSettings().FirstOrDefault(l => l.Key.Trim().ToLower() == "emailaddressicon")?.Value)@layoutService.GetSettings().FirstOrDefault(l => l.Key.Trim().ToLower() == "emailaddress")?.Value</p>
                <p class="mb-2">@Html.Raw(layoutService.GetSettings().FirstOrDefault(l => l.Key.Trim().ToLower() == "phonenumbericon")?.Value)@layoutService.GetSettings().FirstOrDefault(l => l.Key.Trim().ToLower() == "phonenumber")?.Value</p>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->